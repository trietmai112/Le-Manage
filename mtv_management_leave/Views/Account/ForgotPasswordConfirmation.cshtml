@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-content">
    <!-- Forgot Password -->
    <div class="lc-block toggled" id="l-forget-password">
        <div class="lcb-form">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
            <div>
