@model mtv_management_leave.Models.Account.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-content">
    <!-- Login -->
    <div class="lc-block toggled" id="l-login">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(model => model.Code)
            <div class="lcb-form">
                <hgroup class="title">
                    <h1>@ViewBag.Title.</h1>
                </hgroup>
                @Html.vTextBoxFor(m => m.Email)

                @Html.vPasswordFor(m => m.Password)

                @Html.vPasswordFor(m => m.ConfirmPassword)

                <a href="#" class="btn btn-login btn-success btn-float"><i class="zmdi zmdi-arrow-forward"></i></a>
            </div>
        }
        <div class="lcb-navigation">
            <a href="@Url.Action("login","account")"><i class="zmdi zmdi-plus"></i> <span>Register</span></a>
            <a href="@Url.Action("forgotpassword","account")"><i>?</i> <span>Forgot Password</span></a>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/js/account/account.js" type="text/javascript"></script>
}
